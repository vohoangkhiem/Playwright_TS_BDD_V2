{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["config/*"],
      "@pages/*": ["tests/pages/*"],
      "@steps/*": ["tests/steps/*"],
      "@support/*": ["tests/support/*"],
      "@data/*": ["tests/data/*"],
      "@utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "noImplicitAny": true
  },
  "include": [
    "tests/**/*.ts",
    "config/**/*.ts",
    "src/**/*.ts",
    "scripts/**/*.ts",
    "playwright.config.ts"
, "tests/.features-gen/minimal.spec.ts"  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
