{
  "name": "playwright-ts-bdd",
  "version": "0.1.0",
  "private": true,
  "description": "Production-ready Playwright + TypeScript + Cucumber (BDD) test automation framework",
  "scripts": {
    "clean": "rimraf dist test-results playwright-report .nyc_output",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"{src,tests,config,scripts}/**/*.{ts,js}\"",
    "lint:fix": "eslint --fix \"{src,tests,config,scripts}/**/*.{ts,js}\"",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "npm run test:all",
    "test:all": "bddgen && playwright test",
    "test:ui": "bddgen && playwright test --grep \"@ui\" --grep-invert \"@skip\"",
    "test:smoke": "bddgen && playwright test --grep \"@smoke\" --grep-invert \"@skip\"",
    "test:sanity": "bddgen && playwright test --grep \"@sanity\" --grep-invert \"@skip\"",
    "test:regression": "bddgen && playwright test --grep \"@regression\" --grep-invert \"@skip\"",
    "test:navigation": "bddgen && playwright test --grep \"@navigation\" --grep-invert \"@skip\"",
    "test:feature:docs_navigation": "cross-env FEATURE=tests/features/docs_navigation.feature bddgen && cross-env FEATURE=tests/features/docs_navigation.feature playwright test --grep-invert \"@skip\"",
    "test:feature:footer_validation": "cross-env FEATURE=tests/features/footer_validation.feature bddgen && cross-env FEATURE=tests/features/footer_validation.feature playwright test --grep-invert \"@skip\"",
    "test:feature:getting_started_cta": "cross-env FEATURE=tests/features/getting_started_cta.feature bddgen && cross-env FEATURE=tests/features/getting_started_cta.feature playwright test --grep-invert \"@skip\"",
    "test:feature:header_navigation": "cross-env FEATURE=tests/features/header_navigation.feature bddgen && cross-env FEATURE=tests/features/header_navigation.feature playwright test --grep-invert \"@skip\"",
    "test:feature:search_functionality": "cross-env FEATURE=tests/features/search_functionality.feature bddgen && cross-env FEATURE=tests/features/search_functionality.feature playwright test --grep-invert \"@skip\"",
    "test:search": "bddgen && playwright test --grep \"@search\" --grep-invert \"@skip\"",
    "ci": "npm run clean && npm run lint && npm run build && npm run test:all"
  },
  "dependencies": {
    "csv-parse": "^5.5.6",
    "dotenv": "^16.4.5",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.0",
    "playwright": "^1.57.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "playwright-bdd": "^8.4.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
